<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.easyrepair3.DingdanActivity">>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/my_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发布订单"
            android:textColor="@color/text_black" />
    </RelativeLayout>

    <View
        android:id="@+id/divider0"
        style="@style/divider_16dp"
        android:layout_below="@id/toolbar" />

    <EditText
        android:id="@+id/e_ren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider0"
        android:hint="请输入联系人" />

    <View
        android:id="@+id/divider1"
        style="@style/divider"
        android:layout_below="@+id/e_ren" />

    <EditText
        android:id="@+id/e_dianhua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:hint="请输入电话" />

    <View
        android:id="@+id/divider2"
        style="@style/divider"
        android:layout_below="@+id/e_dianhua" />

    <EditText
        android:id="@+id/e_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:hint="请输入地址" />

    <View
        android:id="@+id/divider3"
        style="@style/divider"
        android:layout_below="@+id/e_address" />

    <EditText
        android:id="@+id/e_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:hint="请输入故障描述"
        android:maxLines="2"/>

    <View
        android:id="@+id/divider4"
        style="@style/divider"
        android:layout_below="@+id/e_describe" />

    <TextView
        android:id="@+id/e_tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider4"
        android:text="提示：下单后商家会主动联系您，请保持电话畅通" />

    <View
        android:id="@+id/divider5"
        style="@style/divider_16dp"
        android:layout_below="@id/e_tishi"/>

    <Button
        android:id="@+id/b_tijiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider5"
        android:text="提交订单" />

</RelativeLayout>

