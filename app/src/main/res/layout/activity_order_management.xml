<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.easyrepair3.OrderManagementActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/my_back"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/text_black" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_name"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="用户名："
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/order_name1"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/order_name"
            android:layout_toEndOf="@+id/order_name"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/order_linkman"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:textSize="20sp"
        android:text="联系人："
        android:textColor="@color/text_black"
    />
    <TextView
        android:id="@+id/order_linkman1"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:textSize="20sp"
        android:textColor="@color/text_black"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/order_linkman"
        android:layout_toEndOf="@+id/order_linkman"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_linkman_tel"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:text="联系人电话："
            android:textColor="@color/text_black"
         />
        <TextView
            android:id="@+id/order_linkman_tel1"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/order_linkman_tel"
            android:layout_toEndOf="@+id/order_linkman_tel"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_address"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="地址："
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/order_address1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:layout_alignBaseline="@+id/order_address"
            android:layout_alignBottom="@+id/order_address"
            android:layout_toRightOf="@+id/order_address"
            android:layout_toEndOf="@+id/order_address" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_q_detail"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="问题描述："
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/order_q_detail1"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:layout_alignBaseline="@+id/order_q_detail"
            android:layout_alignBottom="@+id/order_q_detail"
            android:layout_toRightOf="@+id/order_q_detail"
            android:layout_toEndOf="@+id/order_q_detail" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_m_name"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:text="维修员："
            android:textColor="@color/text_black"
        />
        <TextView
            android:id="@+id/order_m_name1"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/order_m_name"
            android:layout_toEndOf="@+id/order_m_name"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_m_tel"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:text="维修员电话："
            android:textColor="@color/text_black"
         />
        <TextView
            android:id="@+id/order_m_tel1"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/order_m_tel"
            android:layout_toEndOf="@+id/order_m_tel"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_price"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:text="价格："
            android:textColor="@color/text_black"
         />
        <TextView
            android:id="@+id/order_price1"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/order_price"
            android:layout_toEndOf="@+id/order_price"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_pay_method"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:text="支付方式："
            android:textColor="@color/text_black"
        />
        <TextView
            android:id="@+id/order_pay_method1"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/order_pay_method"
            android:layout_toEndOf="@+id/order_pay_method"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/delete_order"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="删除订单"
        android:background="@drawable/shape"
        android:layout_marginTop="50dp"
        android:layout_margin="16dp"
        android:textSize="17sp"
        />

</LinearLayout>
