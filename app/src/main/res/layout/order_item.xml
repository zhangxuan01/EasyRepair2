<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_name"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="用户名："
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/order_name1"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/order_name"
            android:layout_toEndOf="@+id/order_name"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_address"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="地址："
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/order_address1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:layout_alignBaseline="@+id/order_address"
            android:layout_alignBottom="@+id/order_address"
            android:layout_toRightOf="@+id/order_address"
            android:layout_toEndOf="@+id/order_address" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_q_detail"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="问题描述："
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/order_q_detail1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:layout_alignBaseline="@+id/order_q_detail"
            android:layout_alignBottom="@+id/order_q_detail"
            android:layout_toRightOf="@+id/order_q_detail"
            android:layout_toEndOf="@+id/order_q_detail" />
    </RelativeLayout>


</LinearLayout>